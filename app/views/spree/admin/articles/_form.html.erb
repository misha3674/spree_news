<div data-hook="admin_article_form_fields" class="row">
  <div class="col-12 col-md-6">
    <%= f.field_container :title, class: ['form-group'] do %>
      <%= f.label :title, Spree.t(:title) %> <span class="required">*</span>
      <%= f.text_field :title, class: "form-control" %>
      <%= f.error_message_on :title %>
    <% end %>
  </div>

  <div class="col-12 col-md-6">
    <%= f.field_container :summary, class: ['form-group'] do %>
      <%= f.label :summary, Spree.t(:summary) %> <span class="required">*</span>
      <%= f.text_field :summary, class: "form-control" %>
      <%= f.error_message_on :summary %>
    <% end %>
  </div>

  <div class="col-12">
    <div>
      <%= f.field_container :content, class: ['form-group'] do %>
        <%= f.label :content, Spree.t(:content) %>
        <%= f.text_area :content, { rows: 10, class: 'form-control' } %>
        <%= f.error_message_on :content %>
      <% end %>
    </div>
  </div>
</div>
