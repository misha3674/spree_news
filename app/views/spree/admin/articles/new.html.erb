<% content_for :page_title do %>
  <%= link_to Spree.t(:articles), spree.admin_articles_url %> /
  <%= Spree.t(:new_article) %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @article } %>

<%= form_for [:admin, @article] do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'spree/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>
